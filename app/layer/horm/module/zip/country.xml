<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<sql_mapping>
	<class name="Country" table="mz_country">
		<id column="country_id"></id>
	
		<relationships>
			<one_to_many name="states">
				<attribute column="*" table="mz_state" />
				
				<key pcolumn="country_id" fcolumn="country_id" ftable="mz_state" />
			</one_to_many>
		</relationships>
	</class>
</sql_mapping>
