<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<import relative="1">app.xml</import>
	
	<!-- BUSINESS LOGIC -->
	<bean name="SoaIormIDABrokerClient" path="lib.org.phpframework.broker.client.local.LocalIbatisDataAccessBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>iorm_dal.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>IormIDABrokerServer</parameter>
		</function>
	</bean>
	<bean name="SoaHormHDABrokerClient" path="lib.org.phpframework.broker.client.local.LocalHibernateDataAccessBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>horm_dal.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>HormHDABrokerServer</parameter>
		</function>
	</bean>
	<bean name="SoaDbdataDBBrokerClient" path="lib.org.phpframework.broker.client.local.LocalDBBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>dbdata_dbl.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>DbdataDBBrokerServer</parameter>
		</function>
	</bean>

	<var name="soa_business_logic_vars">
		<list>
			<item name="business_logic_path"><?php echo LAYER_PATH; ?>soa/</item>
			<item name="business_logic_modules_file_path"><?php echo LAYER_PATH; ?>soa/modules.xml</item>
			<item name="business_logic_services_file_name">services.xml</item>
	
			<item name="business_logic_modules_common_name">common</item>
			<item name="business_logic_modules_common_path"><?php echo LAYER_PATH; ?>soa/common/</item>
			<item name="business_logic_modules_service_common_file_path"><?php echo LAYER_PATH; ?>soa/common/CommonService.php</item>
	
			<item name="business_logic_services_annotations_enabled">1</item>
		</list>
	</var>

	<bean name="SoaBLLayer" path="lib.org.phpframework.layer.businesslogic.BusinessLogicLayer">
		<constructor_arg reference="soa_business_logic_vars" />

		<property name="cacheLayer" reference="SoaBLCacheLayer" />
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />
		<property name="docBlockParser" reference="SoaBLDocBlockParser" />
		
		<function name="addBroker">
			<parameter reference="SoaIormIDABrokerClient" />
			<parameter value="iorm" />
		</function>
		<function name="addBroker">
			<parameter reference="SoaHormHDABrokerClient" />
			<parameter value="horm" />
		</function>
		<function name="addBroker">
			<parameter reference="SoaDbdataDBBrokerClient" />
			<parameter value="dbdata" />
		</function>
	</bean>
	
	<bean name="SoaBLBrokerServer" path="lib.org.phpframework.broker.server.local.LocalBusinessLogicBrokerServer">
		<constructor_arg reference="SoaBLLayer" />
	</bean>

	<var name="soa_business_logic_cache_vars">
		<list>
			<item name="business_logic_cache_file_name">cache.xml</item>
			<item name="business_logic_cache_path"><?php echo LAYER_CACHE_PATH; ?>soa/</item>
			<item name="business_logic_default_cache_ttl">600</item>
			<item name="business_logic_module_cache_maximum_size"></item>
		</list>
	</var>

	<bean name="SoaBLCacheLayer" path="lib.org.phpframework.layer.cache.BusinessLogicCacheLayer">
		<constructor_arg reference="SoaBLLayer" />
		<constructor_arg reference="soa_business_logic_cache_vars" />
	</bean>

	<bean name="SoaBLDocBlockParser" path="org.phpframework.phpscript.docblock.DocBlockParser">
		<property name="cacheHandler" reference="SoaBLDocBlockParserCacheHandler" />
	</bean>

	<bean name="SoaBLDocBlockParserCacheHandler" path="org.phpframework.cache.user.filesystem.FileSystemUserCacheHandler">
		<property name="rootPath"><?php echo LAYER_CACHE_PATH; ?>soa/annotations/</property>
	</bean>
</beans>