<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<import relative="1">app.xml</import>
	<import relative="1">mysql_dbdriver.xml</import>

	<!-- DB -->
	<var name="dbdata_dbl_vars">
		<list>
			<item name="dbl_path"><?php echo LAYER_PATH; ?>dbdata/</item>
		</list>
	</var>
	
	<bean name="DbdataDBLayer" path="lib.org.phpframework.layer.db.DBLayer">
		<constructor_arg reference="dbdata_dbl_vars" />
		
		<property name="isDefaultLayer" value="0" />
		<property name="cacheLayer" reference="DbdataDBCacheLayer" />
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />
		
		<function name="addBroker">
			<parameter reference="Mysql" />
			<parameter value="mysql" />
		</function>

		<function name="setDefaultBrokerName">
			<parameter value="&lt;?php echo $GLOBALS['default_db_driver']; ?>" />
		</function>
	</bean>
	
	<bean name="DbdataDBBrokerServer" path="lib.org.phpframework.broker.server.local.LocalDBBrokerServer">
		<constructor_arg reference="DbdataDBLayer" />
	</bean>
	
	<var name="dbdata_dbl_cache_vars">
		<list>
			<item name="dbl_cache_file_name">cache.xml</item>
			<item name="dbl_cache_path"><?php echo LAYER_CACHE_PATH; ?>dbdata/</item>
			<item name="dbl_default_cache_ttl">600</item>
			<item name="dbl_module_cache_maximum_size"></item>
		</list>
	</var>
	
	<bean name="DbdataDBCacheLayer" path="lib.org.phpframework.layer.cache.DBCacheLayer">
		<constructor_arg reference="DbdataDBLayer" />
		<constructor_arg reference="dbdata_dbl_cache_vars" />
	</bean>
</beans>