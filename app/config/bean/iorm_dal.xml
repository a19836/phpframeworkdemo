<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<import relative="1">app.xml</import>
	
	<bean name="IormDbdataDBBrokerClient" path="lib.org.phpframework.broker.client.local.LocalDBBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>dbdata_dbl.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>DbdataDBBrokerServer</parameter>
		</function>
	</bean>
	<!-- IBATIS -->
	<bean name="IormIClient" path="lib.org.phpframework.sqlmap.ibatis.IBatisClient"></bean>

	<var name="iorm_ida_vars">
		<list>
			<item name="dal_path"><?php echo LAYER_PATH; ?>iorm/</item>
			<item name="dal_modules_file_path"><?php echo LAYER_PATH; ?>iorm/modules.xml</item>
			<item name="dal_services_file_name">services.xml</item>
		</list>
	</var>

	<bean name="IormIDALayer" path="lib.org.phpframework.layer.dataaccess.IbatisDataAccessLayer">
		<constructor_arg reference="IormIClient" />
		<constructor_arg reference="iorm_ida_vars" />

		<property name="isDefaultLayer" value="0" />
		<property name="cacheLayer" reference="IormIDACacheLayer" />
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />
		
		<function name="addBroker">
			<parameter reference="IormDbdataDBBrokerClient" />
			<parameter value="dbdata" />
		</function>

		<function name="setDefaultBrokerName">
			<parameter value="&lt;?php echo $GLOBALS['default_db_broker']; ?>" />
		</function>
	</bean>
	
	<bean name="IormIDABrokerServer" path="lib.org.phpframework.broker.server.local.LocalIbatisDataAccessBrokerServer">
		<constructor_arg reference="IormIDALayer" />
	</bean>

	<var name="iorm_ida_cache_vars">
		<list>
			<item name="dal_cache_file_name">cache.xml</item>
			<item name="dal_cache_path"><?php echo LAYER_CACHE_PATH; ?>iorm/</item>
			<item name="dal_default_cache_ttl">600</item>
			<item name="dal_module_cache_maximum_size"></item>
		</list>
	</var>

	<bean name="IormIDACacheLayer" path="lib.org.phpframework.layer.cache.DataAccessCacheLayer">
		<constructor_arg reference="IormIDALayer" />
		<constructor_arg reference="iorm_ida_cache_vars" />
	</bean>
</beans>