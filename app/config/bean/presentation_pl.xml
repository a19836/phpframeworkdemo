<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<import relative="1">app.xml</import>

	<!-- PRESENTATION -->
	<var name="presentation_p_vars">
		<list>
			<item name="presentations_path"><?php echo LAYER_PATH; ?>presentation/</item>
			<item name="presentations_modules_file_path"><?php echo LAYER_PATH; ?>presentation/modules.xml</item>
			<item name="presentation_configs_path">src/config/</item>
			<item name="presentation_utils_path">src/util/</item>
			<item name="presentation_controllers_path">src/controller/</item>
			<item name="presentation_entities_path">src/entity/</item>
			<item name="presentation_views_path">src/view/</item>
			<item name="presentation_templates_path">src/template/</item>
			<item name="presentation_blocks_path">src/block/</item>
			<item name="presentation_modules_path">src/module/</item>
			<item name="presentation_webroot_path">webroot/</item>
	
			<item name="presentation_common_project_name">common</item>
			<item name="presentation_common_path"><?php echo LAYER_PATH; ?>presentation/common/</item>
	
			<!--item name="presentation_files_extension">php</item-->
		</list>
	</var>

	<!-- DISPATCHER CACHE -->
	<var name="presentation_dispatcher_cache_vars">
		<list>
			<item name="dispatcher_caches_path">src/config/cache/</item>
			<item name="dispatchers_cache_file_name">dispatcher.xml</item>
			<item name="dispatchers_cache_path"><?php echo LAYER_CACHE_PATH;?>presentation/dispatcher/</item>
			<item name="dispatchers_default_cache_ttl">600</item>
			<item name="dispatchers_default_cache_type">text</item>
			<item name="dispatchers_module_cache_maximum_size"></item>
		</list>
	</var>

	<bean name="PresentationPDispatcherCacheHandler" path="lib.org.phpframework.dispatcher.DispatcherCacheHandler">
		<constructor_arg reference="presentation_dispatcher_cache_vars" />
		<constructor_arg reference="presentation_p_vars" />
	</bean>

	<!-- PRESENTATION -->
	<bean name="PresentationSoaBLBrokerClient" path="lib.org.phpframework.broker.client.local.LocalBusinessLogicBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>soa_bll.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>SoaBLBrokerServer</parameter>
		</function>
	</bean>
	<bean name="PresentationIormIDABrokerClient" path="lib.org.phpframework.broker.client.local.LocalIbatisDataAccessBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>iorm_dal.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>IormIDABrokerServer</parameter>
		</function>
	</bean>
	<bean name="PresentationHormHDABrokerClient" path="lib.org.phpframework.broker.client.local.LocalHibernateDataAccessBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>horm_dal.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>HormHDABrokerServer</parameter>
		</function>
	</bean>
	<bean name="PresentationDbdataDBBrokerClient" path="lib.org.phpframework.broker.client.local.LocalDBBrokerClient">
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />

		<function name="addBeansFilePath">
			<parameter><?php echo BEAN_PATH; ?>dbdata_dbl.xml</parameter>
		</function>
		<function name="setBeanName">
			<parameter>DbdataDBBrokerServer</parameter>
		</function>
	</bean>
			
	<bean name="PresentationPLayer" path="lib.org.phpframework.layer.presentation.PresentationLayer">
		<constructor_arg reference="presentation_p_vars" />

		<property name="isDefaultLayer" value="1" />
		<property name="cacheLayer" reference="PresentationPCacheLayer" />
		<property name="PHPFrameWorkObjName" reference="phpframework_obj_name" />
		
		<function name="addBroker">
			<parameter reference="PresentationSoaBLBrokerClient" />
			<parameter value="soa" />
		</function>
		<function name="addBroker">
			<parameter reference="PresentationIormIDABrokerClient" />
			<parameter value="iorm" />
		</function>
		<function name="addBroker">
			<parameter reference="PresentationHormHDABrokerClient" />
			<parameter value="horm" />
		</function>
		<function name="addBroker">
			<parameter reference="PresentationDbdataDBBrokerClient" />
			<parameter value="dbdata" />
		</function>
	</bean>

	<var name="presentation_p_cache_vars">
		<list>
			<item name="presentation_caches_path">src/config/cache/</item>
			<item name="presentations_cache_file_name">pages.xml</item>
			<item name="presentations_cache_path"><?php echo LAYER_CACHE_PATH; ?>presentation/pages/</item>
			<item name="presentations_default_cache_ttl">600</item>
			<item name="presentations_default_cache_type">text</item>
			<item name="presentations_module_cache_maximum_size"></item>
		</list>
	</var>

	<bean name="PresentationPCacheLayer" path="lib.org.phpframework.layer.cache.PresentationCacheLayer">
		<constructor_arg reference="PresentationPLayer" />
		<constructor_arg reference="presentation_p_cache_vars" />
	</bean>

	<!-- EVC + CMS LAYER -->
	<bean name="PresentationEVC" path="lib.org.phpframework.layer.presentation.evc.EVC">
		<property name="presentationLayer" reference="PresentationPLayer" />
		<property name="defaultController">index</property>
	</bean>
	
	<bean name="PresentationCMSLayer" path="lib.org.phpframework.layer.presentation.cms.CMSLayer">
		<constructor_arg reference="PresentationEVC" />
		
		<property name="cacheLayer" reference="PresentationMultipleCMSCacheLayer" />
	</bean>
	
	<function name="setCMSLayer" reference="PresentationEVC">
		<parameter reference="PresentationCMSLayer" />
	</function>
	
	<var name="presentation_multiple_cms_cache_vars">
		<list>
			<item name="presentation_cms_module_caches_path">src/config/cache/</item>
			<item name="presentations_cms_module_cache_file_name">modules.xml</item>
			<item name="presentations_cms_module_cache_path"><?php echo LAYER_CACHE_PATH; ?>presentation/modules/</item>
			<item name="presentations_cms_module_default_cache_ttl">600</item>
			<item name="presentations_cms_module_default_cache_type">text</item>
			<item name="presentations_cms_module_module_cache_maximum_size"></item>
			
			<item name="presentation_cms_block_caches_path">src/config/cache/</item>
			<item name="presentations_cms_block_cache_file_name">blocks.xml</item>
			<item name="presentations_cms_block_cache_path"><?php echo LAYER_CACHE_PATH; ?>presentation/blocks/</item>
			<item name="presentations_cms_block_default_cache_ttl">600</item>
			<item name="presentations_cms_block_default_cache_type">text</item>
			<item name="presentations_cms_block_module_cache_maximum_size"></item>
		</list>
	</var>
	
	<bean name="PresentationMultipleCMSCacheLayer" path="lib.org.phpframework.layer.presentation.cms.cache.MultipleCMSCacheLayer">
		<constructor_arg reference="PresentationCMSLayer" />
		<constructor_arg reference="presentation_multiple_cms_cache_vars" />
	</bean>

	<!-- ROUTER -->
	<var name="presentation_router_vars">
		<list>
			<item name="routers_path">src/config/</item>
			<item name="routers_file_name">router.xml</item>
		</list>
	</var>

	<bean name="PresentationPRouter" path="lib.org.phpframework.router.PresentationRouter">
		<constructor_arg reference="presentation_router_vars" />

		<property name="presentationLayer" reference="PresentationPLayer" />
	</bean>

	<!-- PRESENTATION_DISPATCHER -->
	<bean name="PresentationEVCDispatcher" path="lib.org.phpframework.dispatcher.EVCDispatcher">
		<property name="router" reference="PresentationPRouter" />
		<property name="EVC" reference="PresentationEVC" />
	</bean>
	<!--bean name="PresentationEVCDispatcher" path="org.phpframework.dispatcher.PresentationDispatcher" path_prefix="<?php echo LIB_PATH;?>">
		<property name="router" reference="PresentationPRouter" />
		<property name="presentationLayer" reference="PresentationPLayer" />
	</bean-->
</beans>